<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>gitlab-ci</Name>
  <Description>
    GitLab CI is a Continuous Integration platform that lets you test, build, and deploy your code. This requires a working GitLab installation.
  </Description>
  <Registry>https://registry.hub.docker.com/u/sameersbn/gitlab-ci/</Registry>
  <Repository>sameersbn/gitlab-ci</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Environment>
    <Variable>
      <Name>GITLAB_CI_PORT</Name>
      <Value>10081</Value>
    </Variable>
    <Variable>
      <Name>GITLAB_URL</Name>
      <Value>http://gitlab.local:10080</Value>
    </Variable>
    <Variable>
      <Name>GITLAB_APP_ID</Name>
      <Value></Value>
    </Variable>
    <Variable>
      <Name>GITLAB_APP_SECRET</Name>
      <Value></Value>
    </Variable>
    <Variable>
      <Name>GITLAB_CI_SECRETS_SESSION_KEY_BASE</Name>
      <Value></Value>
    </Variable>
    <Variable>
      <Name>GITLAB_CI_SECRETS_DB_KEY_BASE</Name>
      <Value></Value>
    </Variable>
    <Variable>
      <Name>GITLAB_CI_HOST</Name>
      <Value>localhost</Value>
    </Variable>
    <Variable>
      <Name>GITLAB_CI_PORT</Name>
      <Value>10081</Value>
    </Variable>
    <Variable>
      <Name>GITLAB_CI_HTTPS</Name>
      <Value>false</Value>
    </Variable>
    <Variable>
      <Name>SMTP_HOST</Name>
      <Value>smtp.gmail.com</Value>
    </Variable>
    <Variable>
      <Name>SMTP_USER</Name>
      <Value></Value>
    </Variable>
    <Variable>
      <Name>SMTP_PASS</Name>
      <Value></Value>
    </Variable>
  </Environment>  
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>10081</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>10444</HostPort>
        <ContainerPort>443</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/gitlab-ci</HostDir>
      <ContainerDir>/home/gitlab_ci/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Version>latest</Version>
  <WebUI>http://[IP]:[PORT:10081]/</WebUI>
  <Banner>https://about.gitlab.com/images/logo.png</Banner>
  <Icon>https://about.gitlab.com/images/logo.png</Icon>
  <ExtraParams>
    --link gitlab-ci-postgresql:postgresql --link gitlab-ci-redis:redisio
  </ExtraParams>
</Container>
